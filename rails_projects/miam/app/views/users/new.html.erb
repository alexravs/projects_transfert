<h1 class="title">Inscription</h1>
<hr size="30px" width="50%"  align=center>

<%= render "layouts/errors", :object => @user %>

<div class="container">
<div class="col-md-6 center form-style">
  <%= form_for @user, :html => { :multipart => true } do |f| %>
  <div class="form-group">
  
    <%= f.text_field :firstname, class:"form-control input-style",:placeholder => "Quel est votre prénom" %>
</div>
  <div class="form-group">
    <%= f.text_field :lastname, class:"form-control input-style",:placeholder => "Et votre nom alors?" %>
</div>
  <div class="form-group">
    <%= f.text_field :username, class:"form-control input-style",:placeholder => "Sous quel pseudonyme souhaitez-vous être vu?" %>
</div>
  <div class="form-group">
  
    <%= f.text_field :email, class:"form-control input-style",:placeholder => "Email" %>
</div>
  <div class="form-group">
 
    <%= f.text_field :password, class:"form-control input-style",:placeholder => "Votre mot de passe?" %>
  </div>
  <div class="form-group">
 
    <%= f.password_field :password_confirmation, class:"form-control input-style ",:placeholder => "Retapez votre mot de passe s'il vous plait" %>
  </div>
  
  <div class="form-group">
    <%= f.file_field :avatar %>
  </div>
  
    

  <div class="form-group">
  <%= f.submit class: 'button-to-sign ' %>
  </div>
  
<% end %>
</div>
  </div>
