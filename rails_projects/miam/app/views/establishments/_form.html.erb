<%= render "layouts/errors", :object => @establishment %>
<div class="container">
<div class="col-md-6 center form-style">
<%= form_for @establishment do |f| %>
  <div class="form-group">
  
    <%= f.text_field :name, class:"form-control input-style",:placeholder => "Nom du restaurant" %>
</div>
  <div class="form-group">
 
    <%= f.text_field :adress, class:"form-control input-style",:placeholder => "Adresse du restaurant" %>
  </div>
  <div class="form-group">
    <%= fields_for :city, @establishment.city, remote: true do |city_fields| %>
    <div class="form-group">

      <%= city_fields.text_field :name, class:"form-control input-style ajax-search-city",:placeholder => "Où se trouve t'il? (commune)" %>
      <div class="found-cities"><span>why?</span></div>
  </div>
    <div class="form-group">
  <label for="choix_bieres">Indiquez votre bière préférée :</label>
    <input list="bieres" type="text" id="choix_bieres" class="form-control input-style">
    <datalist id="bieres" class="input-style">
      <option value="Meteor">
      <option value="Pils">
      <option value="Kronenbourg">
      <option value="Grimbergen">
    </datalist>

  <% end %>
 
    <%= f.text_area :description, class:"form-control input-style",:placeholder => "Quel est la description?" %>
  </div>
  <div class="form-group">
   <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"> <%= f.label :logo %> (conseillé): <%= f.file_field :logo %></span>
   
    </div>

  <%= f.submit class: 'button-to-sign' %>
  
<% end %>
</div>
  </div>
</div>